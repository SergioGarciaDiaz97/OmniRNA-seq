{
  "project_setup": {
    "base_dir": "Mouse_Alzheimer_5xFAD",
    "host_bind_dir": "/path/to/your/home/directory",
    "aligner": "none",
    "counting_method": "precomputed_csv",
    "sequencing_type": "paired-end",
    "quantification_options": {
      "run_exploratory_analysis": true,
      "explore_on": [
        "vst"
      ],
      "run_for": {
        "star": []
      }
    }
  },
  "source_data": {
    "fastq_list_strategy": "manual",
    "fastq_list_file": "dummy.txt",
    "count_matrix_url": "https://ftp.ncbi.nlm.nih.gov/geo/series/GSE168nnn/GSE168137/suppl/GSE168137_countList.txt.gz",
    "genome_urls": [
      "https://ftp.ensembl.org/pub/release-111/gtf/mus_musculus/Mus_musculus.GRCm39.111.gtf.gz"
    ]
  },
  "tool_parameters": {
    "threads": 4,
    "threads_per_sample": 4,
    "download_threads": 4,
    "cleanup_fastq": false,
    "trimmomatic": {
      "adapter_fasta_url": ""
    },
    "star": {
      "sjdbOverhang": 100
    },
    "analysis_thresholds": {
      "log2fc": 1.0,
      "padj": 0.05
    }
  },
  "deseq2_experiment": {
    "metadata_path": "Metadata_Archivos/metadata_mouse_alzheimer.csv",
    "design_formula": "~ region + age + strain + age:strain",
    "control_group": "BL6",
    "treatment_group": "5xFAD",
    "control_group_contrast": "BL6",
    "grouping_variable": "strain"
  },
  "annotation": {
    "organism_db": "org.Mm.eg.db",
    "key_type": "ENSEMBL",
    "strip_gene_version": true
  },
  "scripts": {
    "r_exploratory_script_path": "R_CODES/01_EDA_QC.R",
    "r_deseq2_script_path": "R_CODES/02_Differential_expression.R",
    "r_enrichment_plotter_script_path": "R_CODES/03_Functional_analysis_viz.R",
    "r_pdf_report_script_path": "R_CODES/04_Comprehensive_Report_Builder.R"
  },
  "container_images": {
    "fastqc": "/path/to/containers/fastqc.img",
    "trimmomatic": "/path/to/containers/trimmomatic.img",
    "star": "/path/to/containers/star.img",
    "hisat2": "/path/to/containers/hisat2.img",
    "featurecounts": "/path/to/containers/subread.img",
    "stringtie": "/path/to/containers/stringtie.img",
    "r_deseq2": "/path/to/containers/r_custom_env.sif",
    "multiqc": "/path/to/containers/multiqc.img"
  },
  "functional_analysis": {
    "run_kegg": true,
    "gprofiler_organism_code": "mmusculus",
    "pathview_kegg_code": "mmu",
    "kegg_padj_threshold": 0.05,
    "run_enrichment_plots": true,
    "run_sea_analysis": true,
    "run_gsea_analysis": true,
    "run_final_pdf_reports": true,
    "sea_padj_cutoff": 0.05,
    "sea_qvalue_cutoff": 0.1,
    "sea_ontologies": [
      "BP",
      "MF",
      "CC"
    ],
    "plot_parameters": {
      "top_n_emap": 15,
      "top_n_cnet": 10,
      "top_n_ridge": 15,
      "top_n_gseaplot": 5
    }
  }
}
